{
  "type": "SimplePage",
  "schema": {
    "title": {
      "type": "PageTitle",
      "schema": {
        "title": "Form",
        "description": "Showcases action, form components and events",
        "actions": [
          {
            "type": "Button",
            "schema": {
              "label": "New Parent"
            },
            "action": {
              "type": "Local",
              "composable": "useRedirect",
              "options": {
                "type": "Inline",
                "value": {
                  "route": "/form-sample/new-parent"
                }
              }
            }
          },
          {
            "type": "Button",
            "schema": {
              "label": "Clear Parents"
            },
            "action": {
              "type": "Remote",
              "path": "form-sample/parents",
              "method": "DELETE",
              "postAction": {
                "type": "Publish",
                "event": "clear-parents"
              }
            }
          }
        ]
      }
    },
    "contents": [
      {
        "component": {
          "type": "DataPanel",
          "schema": {
            "title": {
              "type": "Inline",
              "value": "GetParents"
            },
            "localizeTitle": true,
            "inputs": [],
            "content": {
              "type": "DataTable",
              "schema": {
                "columns": [
                  {
                    "key": "name",
                    "component": {
                      "type": "Text",
                      "schema": {},
                      "data": {
                        "type": "Context",
                        "key": "parent",
                        "prop": "row.name"
                      }
                    },
                    "title": "Name",
                    "minWidth": true,
                    "exportable": true,
                    "frozen": true
                  }
                ],
                "dataKey": "id",
                "paginator": true,
                "rows": 5,
                "exportOptions": {
                  "csvSeparator": ";",
                  "fileName": "GetParents.ExportFileName",
                  "formatter": "useCsvFormatter",
                  "buttonIcon": "pi pi-download",
                  "buttonLabel": "Export as CSV",
                  "appendParameters": true,
                  "parameterSeparator": "_",
                  "parameterFormatter": "useLocaleParameterFormatter"
                },
                "actionTemplate": {
                  "key": "Actions",
                  "component": {
                    "type": "Container",
                    "schema": {
                      "contents": [
                        {
                          "type": "SimpleForm",
                          "schema": {
                            "title": "Update",
                            "submit": {
                              "label": "Update"
                            },
                            "inputs": [
                              {
                                "name": "name",
                                "required": true,
                                "default": {
                                  "type": "Inline",
                                  "value": null
                                },
                                "component": {
                                  "type": "InputText",
                                  "schema": {
                                    "label": "Name"
                                  }
                                }
                              }
                            ],
                            "dialogOptions": {
                              "open": {
                                "icon": "pi pi-pencil",
                                "label": "",
                                "variant": "text",
                                "rounded": true
                              },
                              "cancel": {
                                "label": "Cancel"
                              }
                            }
                          },
                          "action": {
                            "type": "Remote",
                            "path": "parents/{id:guid}/",
                            "method": "PUT",
                            "params": {
                              "type": "Context",
                              "key": "parent",
                              "prop": "row"
                            },
                            "body": {
                              "type": "Context",
                              "key": "model"
                            },
                            "postAction": {
                              "type": "Publish",
                              "event": "update"
                            }
                          }
                        },
                        {
                          "type": "Button",
                          "schema": {
                            "icon": "pi pi-trash",
                            "label": "",
                            "variant": "text",
                            "severity": "danger",
                            "rounded": true
                          },
                          "action": {
                            "type": "Remote",
                            "path": "parents/{id:guid}/",
                            "method": "DELETE",
                            "params": {
                              "type": "Context",
                              "key": "parent",
                              "prop": "row"
                            },
                            "postAction": {
                              "type": "Publish",
                              "event": "delete"
                            }
                          }
                        }
                      ]
                    }
                  },
                  "alignRight": true,
                  "exportable": false,
                  "frozen": true
                }
              },
              "data": {
                "type": "Remote",
                "path": "form-sample/parents",
                "query": {
                  "type": "Computed",
                  "composable": "useNuxtRoute",
                  "options": {
                    "type": "Inline",
                    "value": {
                      "property": "query"
                    }
                  }
                }
              },
              "reactions": {
                "reload": {
                  "type": "Composite",
                  "parts": [
                    {
                      "type": "On",
                      "on": "clear-parents"
                    },
                    {
                      "type": "On",
                      "on": "delete"
                    },
                    {
                      "type": "On",
                      "on": "update"
                    }
                  ]
                }
              }
            }
          }
        },
        "key": "get-parents"
      }
    ],
    "path": "form-sample"
  }
}