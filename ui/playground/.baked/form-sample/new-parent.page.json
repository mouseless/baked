{
  "type": "FormPage",
  "schema": {
    "title": {
      "title": "New Parent",
      "description": "Fill out the form and hit save to create new parent",
      "actions": [
        {
          "type": "Button",
          "schema": {
            "label": "Back",
            "variant": "text",
            "severity": "secondary"
          },
          "action": {
            "type": "Local",
            "composable": "useRedirect",
            "options": {
              "type": "Inline",
              "value": {
                "back": true
              }
            }
          }
        }
      ]
    },
    "button": {
      "label": "Save"
    },
    "inputs": [
      {
        "name": "name",
        "required": true,
        "default": {
          "type": "Inline",
          "value": null
        },
        "component": {
          "type": "InputText",
          "schema": {
            "label": "Name"
          }
        }
      }
    ],
    "path": "form-sample/new-parent"
  },
  "action": {
    "type": "Remote",
    "path": "form-sample/new-parent",
    "method": "POST",
    "body": {
      "type": "Context",
      "key": "model"
    },
    "postAction": {
      "type": "Local",
      "composable": "useRedirect",
      "options": {
        "type": "Inline",
        "value": {
          "route": "/form-sample"
        }
      }
    }
  }
}