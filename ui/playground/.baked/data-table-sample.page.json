                        },
                        "title": "Column 4",
                        "alignRight": true,
                        "exportable": true
                      },
                      {
                        "key": "column5",
                        "component": {
                          "type": "Rate",
                          "schema": {},
                          "data": {
                            "type": "Context",
                            "key": "parent",
                            "prop": "row.column5"
                          }
                        },
                        "title": "Column 5",
                        "alignRight": true,
                        "exportable": true
                      },
                      {
                        "key": "column6",
                        "component": {
                          "type": "Money",
                          "schema": {},
                          "data": {
                            "type": "Context",
                            "key": "parent",
                            "prop": "row.column6"
                          }
                        },
                        "title": "Column 6",
                        "alignRight": true,
                        "exportable": true
                      }
