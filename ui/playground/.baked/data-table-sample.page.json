{
  "type": "ReportPage",
  "schema": {
    "title": {
      "title": "Data Table",
      "description": "Showcase DataTable component with scrollable and footer options",
      "actions": []
    },
    "queryParameters": [],
    "tabs": [
      {
        "id": "default",
        "contents": [
          {
            "component": {
              "type": "DataPanel",
              "schema": {
                "title": {
                  "type": "Inline",
                  "value": "GetTableDataWithFooter"
                },
                "localizeTitle": true,
                "parameters": [
                  {
                    "name": "count",
                    "required": true,
                    "default": {
                      "type": "Inline",
                      "value": "10"
                    },
                    "component": {
                      "type": "Select",
                      "schema": {
                        "label": "Count",
                        "stateful": true
                      },
                      "data": {
                        "type": "Inline",
                        "value": [
                          "10",
                          "20",
                          "100",
                          "1000",
                          "10000"
                        ]
                      }
                    }
                  }
                ],
                "content": {
                  "type": "DataTable",
                  "schema": {
                    "columns": [
                      {
                        "prop": "label",
                        "component": {
                          "fallback": {
                            "type": "Text",
                            "schema": {}
                          },
                          "conditions": []
                        },
                        "title": "Label",
                        "minWidth": true,
                        "exportable": true,
                        "frozen": true
                      },
                      {
                        "prop": "formatDigits",
                        "component": {
                          "fallback": {
                            "type": "Number",
                            "schema": {}
                          },
                          "conditions": []
                        },
                        "title": "Format Digits",
                        "alignRight": true,
                        "exportable": true
                      },
                      {
                        "prop": "column1",
                        "component": {
                          "fallback": {
                            "type": "Text",
                            "schema": {}
                          },
                          "conditions": []
                        },
                        "title": "Column 1",
                        "exportable": true
                      },
                      {
                        "prop": "column2",
                        "component": {
                          "fallback": {
                            "type": "Text",
                            "schema": {}
                          },
                          "conditions": []
                        },
                        "title": "Column 2",
                        "exportable": true
                      },
                      {
                        "prop": "column3",
                        "component": {
                          "fallback": {
                            "type": "Text",
                            "schema": {}
                          },
                          "conditions": []
                        },
                        "title": "Column 3",
                        "exportable": true
                      },
                      {
                        "prop": "column4",
                        "component": {
                          "fallback": {
                            "type": "Number",
                            "schema": {}
                          },
                          "conditions": []
                        },
                        "title": "Column 4",
                        "alignRight": true,
                        "exportable": true
                      },
                      {
                        "prop": "column5",
                        "component": {
                          "fallback": {
                            "type": "Rate",
                            "schema": {}
                          },
                          "conditions": []
                        },
                        "title": "Column 5",
                        "alignRight": true,
                        "exportable": true
                      },
                      {
                        "prop": "column6",
                        "component": {
                          "fallback": {
                            "type": "Money",
                            "schema": {}
                          },
                          "conditions": []
                        },
                        "title": "Column 6",
                        "alignRight": true,
                        "exportable": true
                      }
                    ],
                    "dataKey": "id",
                    "itemsProp": "items",
                    "scrollHeight": "500px",
                    "virtualScrollerOptions": {
                      "itemSize": 45,
                      "numToleratedItems": 10,
                      "appendOnly": true
                    },
                    "footerTemplate": {
                      "label": "GetTableDataWithFooter.FooterLabel",
                      "columns": [
                        {
                          "prop": "footerColumn1",
                          "component": {
                            "fallback": {
                              "type": "Number",
                              "schema": {}
                            },
                            "conditions": []
                          },
                          "alignRight": true
                        },
                        {
                          "prop": "footerColumn2",
                          "component": {
                            "fallback": {
                              "type": "Rate",
                              "schema": {}
                            },
                            "conditions": []
                          },
                          "alignRight": true
                        },
                        {
                          "prop": "footerColumn3",
                          "component": {
                            "fallback": {
                              "type": "Money",
                              "schema": {}
                            },
                            "conditions": []
                          },
                          "alignRight": true
                        }
                      ]
                    },
                    "exportOptions": {
                      "csvSeparator": ";",
                      "fileName": "GetTableDataWithFooter.ExportFileName",
                      "formatter": "useCsvFormatter",
                      "buttonIcon": "pi pi-download",
                      "buttonLabel": "Export as CSV",
                      "appendParameters": true
                    }
                  },
                  "data": {
                    "type": "Remote",
                    "path": "data-table-sample/table-data-with-footer",
                    "query": {
                      "type": "Composite",
                      "parts": [
                        {
                          "type": "Computed",
                          "composable": "useQuery",
                          "args": []
                        },
                        {
                          "type": "Injected",
                          "key": "Custom"
                        }
                      ]
                    }
                  }
                }
              }
            },
            "key": "get-table-data-with-footer"
          }
        ]
      }
    ],
    "path": "data-table-sample"
  }
}