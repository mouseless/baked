{
  "type": "ReportPage",
  "schema": {
    "title": {
      "title": "Data Table",
      "description": "Showcase DataTable component with scrollable and footer options",
      "actions": []
    },
    "inputs": [],
    "tabs": [
      {
        "id": "default",
        "contents": [
          {
            "component": {
              "type": "DataPanel",
              "schema": {
                "title": {
                  "type": "Inline",
                  "value": "GetTableDataWithFooter"
                },
                "localizeTitle": true,
                "inputs": [
                  {
                    "name": "count",
                    "required": true,
                    "default": {
                      "type": "Inline",
                      "value": "10"
                    },
                    "component": {
                      "type": "Select",
                      "schema": {
                        "label": "Count",
                        "stateful": true
                      },
                      "data": {
                        "type": "Inline",
                        "value": [
                          "10",
                          "20",
                          "100",
                          "1000",
                          "10000"
                        ]
                      }
                    }
                  }
                ],
                "content": {
                  "type": "DataTable",
                  "schema": {
                    "columns": [
                      {
                        "key": "label",
                        "component": {
                          "type": "Text",
                          "schema": {},
                          "data": {
                            "type": "Context",
                            "key": "parent",
                            "prop": "row.label"
                          }
                        },
                        "title": "Label",
                        "minWidth": true,
                        "exportable": true,
                        "frozen": true
                      },
                      {
                        "key": "formatDigits",
                        "component": {
                          "type": "Number",
                          "schema": {},
                          "data": {
                            "type": "Context",
                            "key": "parent",
                            "prop": "row.formatDigits"
                          }
                        },
                        "title": "Format Digits",
                        "alignRight": true,
                        "exportable": true
                      },
                      {
                        "key": "column1",
                        "component": {
                          "type": "Text",
                          "schema": {},
                          "data": {
                            "type": "Context",
                            "key": "parent",
                            "prop": "row.column1"
                          }
                        },
                        "title": "Column 1",
                        "exportable": true
                      },
                      {
                        "key": "column2",
                        "component": {
                          "type": "Text",
                          "schema": {},
                          "data": {
