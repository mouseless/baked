                    "dataKey": "id",
                    "itemsProp": "items",
                    "scrollHeight": "500px",
                    "virtualScrollerOptions": {
                      "itemSize": 45,
                      "numToleratedItems": 10,
                      "appendOnly": true
                    },
                    "footerTemplate": {
                      "label": "GetTableDataWithFooter.FooterLabel",
                      "columns": [
                        {
                          "key": "footerColumn1",
                          "component": {
                            "type": "Number",
                            "schema": {},
