                  },
                  "data": {
                    "type": "Remote",
                    "path": "data-table-sample/table-data-with-footer",
                    "query": {
                      "type": "Composite",
                      "parts": [
                        {
                          "type": "Computed",
                          "composable": "useNuxtRoute",
                          "options": {
                            "type": "Inline",
                            "value": {
                              "property": "query"
                            }
                          }
                        },
                        {
                          "type": "Context",
                          "key": "parent",
                          "prop": "parameters"
                        }
                      ]
                    }
                  }
                }
              }
            },
            "key": "get-table-data-with-footer"
