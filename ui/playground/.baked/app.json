{
  "plugins": [
    {
      "name": "auth",
      "anonymousApiRoutes": [
        "form-sample/state",
        "form-sample/states",
        "cache-samples/scoped",
        "cache-samples/application",
        "authorization-samples/anonymous",
        "authentication-samples/login"
      ],
      "anonymousPageRoutes": [
        "^(?!.*auth).*$",
        "login"
      ],
      "loginPageRoute": "login",
      "refreshApiRoute": "authentication-samples/refresh"
    },
    {
      "expirationInMinutes": 60,
      "name": "cacheApplication"
    },
    {
      "expirationInMinutes": 60,
      "name": "cacheUser"
    },
    {
      "handlers": [
        {
          "statusCode": 401,
          "behavior": "Redirect",
          "behaviorArgument": {
            "type": "Computed",
            "composable": "useLoginRedirect",
            "args": []
          },
          "order": 0
        },
        {
          "statusCode": 400,
          "behavior": "Alert",
          "order": 0
        },
        {
          "behavior": "Page",
          "order": 0
        }
      ],
      "defaultAlertTitle": "Unexpected Error",
      "defaultAlertMessage": "Please contact system administrator",
      "name": "errorHandling"
    },
    {
      "supportedLanguages": [
        {
          "code": "en",
          "name": "English"
        },
        {
          "code": "tr",
          "name": "Turkish"
        }
      ],
      "name": "localization"
    }
  ],
  "error": {
    "type": "ErrorPage",
    "schema": {
      "errorInfos": {
        "403": {
          "title": "Access Denied",
          "message": "You do not have the permision to view the address or data specified."
        },
        "404": {
          "title": "Page Not Found",
          "message": "The page you want to view is either deleted or outdated."
        },
        "500": {
          "title": "Unexpected Error",
          "message": "Please contact system administrator."
        },
        "999": {
          "title": "Application Error",
          "message": "Please contact system administrator."
        }
      },
      "footerInfo": "If you cannot reach the page you want please contact the system administrator",
      "safeLinks": [
        {
          "type": "CardLink",
          "schema": {
            "route": "/",
            "icon": "pi pi-home",
            "title": "Home"
          }
        },
        {
          "type": "CardLink",
          "schema": {
            "route": "/cache-samples",
            "icon": "pi pi-database",
            "title": "Cache",
            "description": "Showcases the cache behavior"
          }
        },
        {
          "type": "CardLink",
          "schema": {
            "route": "/data-table-sample",
            "icon": "pi pi-table",
            "title": "Data Table",
            "description": "Showcase DataTable component with scrollable and footer options"
          }
        },
        {
          "type": "CardLink",
          "schema": {
            "route": "/form-sample",
            "icon": "pi pi-file-edit",
            "title": "Form",
            "description": "Vibe coding form components"
          }
        },
        {
          "type": "CardLink",
          "schema": {
            "route": "/report-page-sample",
            "icon": "pi pi-file",
            "title": "Report",
            "description": "Showcases a report layout with tabs and data panels"
          }
        },
        {
          "type": "CardLink",
          "schema": {
            "route": "/specs",
            "icon": "pi pi-list-check",
            "title": "Specs",
            "description": "All UI Specs are listed here"
          }
        }
      ],
      "safeLinksMessage": "Try the links from the menu below to view the page you want to access:"
    },
    "data": {
      "type": "Computed",
      "composable": "useNuxtError",
      "args": []
    }
  },
  "i18n": {
    "defaultLanguage": {
      "code": "en",
      "name": "English"
    },
    "supportedLanguages": [
      {
        "code": "en",
        "name": "English"
      },
      {
        "code": "tr",
        "name": "Turkish"
      }
    ]
  }
}